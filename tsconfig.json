{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015","DOM"],
        "sourceMap": true,
        "jsx": "react",
        "outDir": "./dist/",
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "inlineSources": false
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules"]
}
